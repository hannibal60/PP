/////////////////////////////////////////////////////////////////////////////////////////////
insercion a bd desde netbeans a gestor mysql/oracle

public void Insertar(int ID, String nombre, String APaterno, String AMaterno, String Curp, int telefono, String direccion) {

    // Establecer conexión con la base de datos
    ConexionBD conexion = new ConexionBD();

        // Pasamos el objeto Connection de nuestra clase "ConexionBD" a esta instancia por medio del método getConnection()
        Connection con = conexion.getConnection();

        // Crear sentencia SQL para insertar en la base de datos
        String query = "INSERT INTO llamadas (ID, nombre, APaterno, AMaterno, Curp, telefono, direccion) values (?, ?, ?, ?, ?, ?, ?)";

        try {
            Statement st = con.createStatement();
            ResultSet rs = st.executeQuery(query);

            rs.setInt       (1, ID);
            rs.setString    (2, nombre);
            rs.setString    (3, APaterno);
            rs.setString    (4, AMaterno);
            rs.setString    (5, Curp);
            rs.setInt       (6, telefono);
            rs.setDouble    (7, direccion);

            // Indicamos que comience la actualización de la tabla en nuestra base de datos
            st.executeUpdate();

            // Cerramos las conexiones, en orden inverso a su apertura
            st.close();
            con.close();

            System.out.println("Llamada agregada con éxito a la base de datos.");
        } catch (SQLException e) {
            System.out.println("Error!, la llamada no pudo ser agregada a la base de datos.");
        }
    }
