/////////////////////////////////////////////////////////////////////////////////////////////
conexion BD en oracle/java

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.SQLException;
 
public class conexion_oracle {
    public static void main(String[] args) {
        try {
            Class.forName("oracle.jdbc.driver.OracleDriver");
            Connection  conexion = DriverManager.getConnection("jdbc:oracle:thin:@localhot:1521:SID_hospital","USER","PASS");
        } catch (SQLException | ClassNotFoundException ex) {
            System.out.println("Error en la conexión de la base de datos");
        }
         
    }
}
/////////////////////////////////////////////////////////////////////////////////////////////

///////conexion BD en mysql/java
public class Conexion {
    Connection con;
    public Conexion(){
        try {
            Class.forName("com.mysql.jdbc.Driver");
            con=DriverManager.getConnection("jdbc:mysql://localhost:3306/hospital","root","12345678");
        } catch (Exception e) {
            System.err.println("Error:" +e);
        }
    }
}
